{
  "verbose": true,
  "collectCoverage": true,
  "testTimeout": 30000,
  "coverageReporters": ["lcov", "json"],
  "collectCoverageFrom": [
      "**/src/**"
  ],
  "transform": {
      "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
  ],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"]
}